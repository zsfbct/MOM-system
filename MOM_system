  TForm1 = class(TForm)
    Session1: TSession;
    DataSource1: TDataSource;
    Query1: TQuery;
    DataSource2: TDataSource;
    Query2: TQuery;
    Session2: TSession;
    Button1: TButton;
    Edit1: TEdit;
